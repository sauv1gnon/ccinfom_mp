{
  "version": 8,
  "name": "satellite-hybrid",
  "glyphs": "fonts/{fontstack}/{range}.pbf",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "mbtiles://{openmaptiles}"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#050505"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#0f2b45",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "#1a1a1a",
        "fill-opacity": 0.3
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "primary"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          0.3,
          18,
          8
        ]
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "secondary", "tertiary"],
      "paint": {
        "line-color": "#e2e2e2",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6,
          0.2,
          18,
          4
        ]
      }
    },
    {
      "id": "road-other",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["!in", "class", "primary", "secondary", "tertiary"],
      "paint": {
        "line-color": "#bfbfbf",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8,
          0.1,
          18,
          3
        ]
      }
    },
    {
      "id": "boundaries",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "paint": {
        "line-color": "#737373",
        "line-dasharray": [3, 2],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          3,
          0.4,
          12,
          2
        ]
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "layout": {
        "text-field": [
          "coalesce",
          ["get", "name:en"],
          ["get", "name"]
        ],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          11,
          15,
          24
        ]
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1.6
      }
    }
  ]
}