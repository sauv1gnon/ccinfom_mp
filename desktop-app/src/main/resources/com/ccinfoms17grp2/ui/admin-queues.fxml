<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ccinfoms17grp2.ui.AdminQueuesController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Manage Queues" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Advance Queue" onAction="#handleAdvanceQueue" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="View Positions" onAction="#handleViewPositions" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search by ID..." prefWidth="150"/>
        <Button text="Search" onAction="#handleSearch"/>
        <Button text="Refresh" onAction="#handleRefresh"/>
    </HBox>

    <TableView fx:id="queuesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="queueIdColumn" text="Queue ID" prefWidth="100"/>
            <TableColumn fx:id="branchIdColumn" text="Branch ID" prefWidth="100"/>
            <TableColumn fx:id="queueDateColumn" text="Queue Date" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
            <TableColumn fx:id="currentPositionColumn" text="Current Position" prefWidth="130"/>
            <TableColumn fx:id="totalPositionsColumn" text="Total Positions" prefWidth="130"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="statusLabel" style="-fx-text-fill: #666;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
    </HBox>

</VBox>
