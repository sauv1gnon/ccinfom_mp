<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@app.css"
            prefHeight="700.0" prefWidth="1000.0">
    
    <!-- Header -->
    <top>
        <VBox styleClass="header" spacing="10">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <Label text="Queue Management" styleClass="title">
                <font><Font size="24" /></font>
            </Label>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="15">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <!-- Filters -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Filters:" styleClass="subtitle"/>
                <ComboBox fx:id="branchFilterComboBox" prefWidth="200"/>
                <ComboBox fx:id="statusFilterComboBox" prefWidth="150"/>
                <CheckBox fx:id="todayOnlyCheckBox" text="Today Only"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh" styleClass="btn-secondary"/>
            </HBox>
            
            <!-- Queue Table -->
            <TableView fx:id="queueTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="queueIdColumn" text="Queue ID" prefWidth="80"/>
                    <TableColumn fx:id="queueNumberColumn" text="Queue #" prefWidth="80"/>
                    <TableColumn fx:id="patientNameColumn" text="Patient Name" prefWidth="200"/>
                    <TableColumn fx:id="branchColumn" text="Branch" prefWidth="150"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                    <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="180"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button fx:id="callNextButton" text="Call Next" onAction="#handleCallNext" 
                        styleClass="btn-primary" prefWidth="120"/>
                <Button fx:id="markServedButton" text="Mark Served" onAction="#handleMarkServed" 
                        styleClass="btn-primary" prefWidth="120"/>
                <Button fx:id="markNoShowButton" text="Mark No-Show" onAction="#handleMarkNoShow" 
                        styleClass="btn-warning" prefWidth="120"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack" 
                        styleClass="btn-secondary" prefWidth="150"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
