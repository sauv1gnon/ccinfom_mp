<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<!-- TODO: Resize later -->
<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ccinfoms17grp2.ui.LoginController">
    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="24.0" styleClass="login-container">
                <padding>
                    <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
                </padding>
                
                <!-- App Title -->
                <VBox alignment="CENTER" spacing="8.0">
                    <Label styleClass="app-title" text="Digital Queue System">
                        <font>
                            <Font name="Segoe UI" size="24.0" />
                        </font>
                    </Label>
                    <Label styleClass="login-subtitle" text="Please sign in to continue">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </Label>
                </VBox>

                <!-- Login Form -->
                <VBox spacing="16.0" styleClass="login-form">
                    <TextField fx:id="emailField" promptText="Email Address" styleClass="text-field">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </TextField>
                    
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </PasswordField>
                    
                    <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" 
                            styleClass="button" text="Sign In" maxWidth="Infinity">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </Button>
                    
                    <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegistration" 
                            styleClass="button.flat" text="Register" maxWidth="Infinity">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </Button>
                </VBox>

                <!-- Status Label -->
                <Label fx:id="statusLabel" styleClass="status-message" visible="false">
                    <font>
                        <Font name="Segoe UI" size="12.0" />
                    </font>
                </Label>
            </VBox>
        </StackPane>
    </center>
</BorderPane>