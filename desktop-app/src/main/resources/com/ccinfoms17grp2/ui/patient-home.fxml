<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ccinfoms17grp2.ui.PatientHomeController" prefWidth="960.0" prefHeight="640.0">
    <top>
        <VBox spacing="6.0">
            <padding>
                <Insets top="30.0" right="28.0" bottom="10.0" left="28.0" />
            </padding>
            <Label text="Patient Homepage" styleClass="app-title">
                <font>
                    <Font name="Segoe UI Semibold" size="28.0" />
                </font>
            </Label>
            <Label fx:id="welcomeLabel" text="Upcoming appointments will appear below" styleClass="subtitle" />
        </VBox>
    </top>
    <center>
        <VBox spacing="18.0">
            <padding>
                <Insets top="12.0" right="28.0" bottom="12.0" left="28.0" />
            </padding>
            <TitledPane text="View Appointments" expanded="true">
                <content>
                    <VBox spacing="10.0">
                        <ListView fx:id="appointmentsList" prefHeight="160.0" />
                        <HBox spacing="10.0">
                            <Button text="Refresh" onAction="#handleViewAppointments" />
                            <Button text="Create Appointment" onAction="#handleCreateAppointment" />
                            <Button text="Cancel Appointment" onAction="#handleCancelAppointment" />
                        </HBox>
                    </VBox>
                </content>
            </TitledPane>
            <TitledPane text="View Consultations" expanded="false">
                <content>
                    <VBox spacing="10.0">
                        <ListView fx:id="consultationsList" prefHeight="140.0" />
                        <Button text="Refresh" onAction="#handleViewConsultations" />
                    </VBox>
                </content>
            </TitledPane>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="12.0">
            <padding>
                <Insets top="16.0" right="28.0" bottom="28.0" left="28.0" />
            </padding>
            <Label fx:id="statusLabel" textFill="#2b2b2b" maxWidth="Infinity" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Back to Login" onAction="#handleBackToLogin" />
        </HBox>
    </bottom>
</BorderPane>
