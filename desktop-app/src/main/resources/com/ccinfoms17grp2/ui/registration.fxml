<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ccinfoms17grp2.ui.RegistrationController">
    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="24.0" styleClass="login-container">
                <padding>
                    <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
                </padding>
                
                <!-- App Title -->
                <VBox alignment="CENTER" spacing="8.0">
                    <Label styleClass="app-title" text="Patient Registration">
                        <font>
                            <Font name="Segoe UI" size="24.0" />
                        </font>
                    </Label>
                    <Label styleClass="login-subtitle" text="Create your patient account">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </Label>
                </VBox>

                <!-- Registration Form -->
                <VBox spacing="16.0" styleClass="login-form">
                    <TextField fx:id="emailField" promptText="Email Address" styleClass="text-field">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </TextField>
                    
                    <PasswordField fx:id="passwordField" promptText="Password (minimum 6 characters)" styleClass="text-field">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </PasswordField>
                    
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="text-field">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </PasswordField>
                    
                    <HBox spacing="16.0">
                        <TextField fx:id="firstNameField" promptText="First Name" styleClass="text-field" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </TextField>
                        
                        <TextField fx:id="lastNameField" promptText="Last Name" styleClass="text-field" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </TextField>
                    </HBox>
                    
                    <TextField fx:id="contactNumberField" promptText="Contact Number" styleClass="text-field">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </TextField>
                    
                    <HBox spacing="10.0">
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegistration" 
                                styleClass="button" text="Create Account" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Button>
                        
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" 
                                styleClass="button flat" text="Back to Login" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Button>
                    </HBox>
                </VBox>

                <!-- Status Label -->
                <Label fx:id="statusLabel" styleClass="status-message" visible="false">
                    <font>
                        <Font name="Segoe UI" size="12.0" />
                    </font>
                </Label>
            </VBox>
        </StackPane>
    </center>
</BorderPane>