<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ccinfoms17grp2.ui.SpecializationFormController"
      spacing="15.0" prefWidth="550.0" prefHeight="450.0">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label fx:id="titleLabel" text="Specialization Form" styleClass="form-title">
        <font>
            <Font name="Segoe UI Semibold" size="18.0" />
        </font>
    </Label>
    
    <Separator/>
    
    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints minWidth="120.0" prefWidth="120.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   promptText="Enter specialization name"/>
        
        <Label text="Code:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   promptText="Enter code (auto-uppercase)"/>
        
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" valignment="TOP">
            <padding>
                <Insets top="5.0"/>
            </padding>
        </Label>
        <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                  promptText="Optional description" prefRowCount="5"/>
    </GridPane>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <Separator/>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" 
                styleClass="button-primary" prefWidth="100.0"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                styleClass="button-secondary" prefWidth="100.0"/>
    </HBox>
</VBox>
