<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ccinfoms17grp2.ui.AdminSpecializationsController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Manage Specializations" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Add Specialization" onAction="#handleAddSpecialization" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Edit Specialization" onAction="#handleEditSpecialization" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Delete Specialization" onAction="#handleDeleteSpecialization" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#handleRefresh"/>
    </HBox>

    <TableView fx:id="specializationsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="specializationIdColumn" text="ID" prefWidth="80"/>
            <TableColumn fx:id="specializationNameColumn" text="Name" prefWidth="300"/>
            <TableColumn fx:id="specializationCodeColumn" text="Code" prefWidth="150"/>
            <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="180"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="statusLabel" style="-fx-text-fill: #666;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
    </HBox>

</VBox>
