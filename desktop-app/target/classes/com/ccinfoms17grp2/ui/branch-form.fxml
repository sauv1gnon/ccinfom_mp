<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ccinfoms17grp2.ui.BranchFormController"
      spacing="15.0" prefWidth="550.0" prefHeight="500.0">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label fx:id="titleLabel" text="Branch Form" styleClass="form-title">
        <font>
            <Font name="Segoe UI Semibold" size="18.0" />
        </font>
    </Label>
    
    <Separator/>
    
    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints minWidth="120.0" prefWidth="120.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="Branch Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="branchNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   promptText="Enter branch name"/>
        
        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  promptText="Enter full address" prefRowCount="3"/>
        
        <Label text="Latitude:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="latitudeField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   promptText="Optional (e.g., 14.5995)"/>
        
        <Label text="Longitude:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="longitudeField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   promptText="Optional (e.g., 120.9842)"/>
        
        <Label text="Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="capacityField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   promptText="Maximum patient capacity"/>
        
        <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="contactField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                   promptText="Branch contact number"/>
    </GridPane>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <Separator/>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" 
                styleClass="button-primary" prefWidth="100.0"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                styleClass="button-secondary" prefWidth="100.0"/>
    </HBox>
</VBox>
