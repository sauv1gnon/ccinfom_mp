<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ccinfoms17grp2.ui.ConsultationListController">
    <left>
        <VBox styleClass="dashboard-left-panel" prefWidth="250.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <spacing>20.0</spacing>
            
            <VBox spacing="12.0">
                <Button styleClass="button" text="Back to Homepage" maxWidth="Infinity" onAction="#handleBackToHomepage" />
                <Button styleClass="button flat" text="View Appointments" maxWidth="Infinity" onAction="#handleViewAppointments" />
            </VBox>
        </VBox>
    </left>
    <center>
        <VBox spacing="20.0" styleClass="dashboard-right-panel">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <VBox spacing="10.0">
                <Label styleClass="label app-title" text="Your Consultations">
                    <font>
                        <Font name="Segoe UI" size="24.0" />
                    </font>
                </Label>
                
                <HBox styleClass="hbox.action-bar">
                    <Button styleClass="button" text="Create Consultation" onAction="#handleCreateConsultation" />
                </HBox>
            </VBox>
            
            <TableView fx:id="consultationTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="consultationIdColumn" text="ID" prefWidth="60.0" />
                    <TableColumn fx:id="appointmentIdColumn" text="Appointment ID" prefWidth="100.0" />
                    <TableColumn fx:id="startTimeColumn" text="Start Time" prefWidth="150.0" />
                    <TableColumn fx:id="endTimeColumn" text="End Time" prefWidth="150.0" />
                    <TableColumn fx:id="diagnosisColumn" text="Diagnosis" prefWidth="200.0" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>