<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ccinfoms17grp2.ui.ConsultationCreateController">
    <left>
        <VBox styleClass="dashboard-left-panel" prefWidth="250.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <spacing>20.0"/>
            
            <VBox spacing="12.0">
                <Button styleClass="button" text="Back to Appointments" maxWidth="Infinity" onAction="#handleCancelCreate" />
                <Button styleClass="button flat" text="Homepage" maxWidth="Infinity" onAction="#handleBackToHomepage" />
            </VBox>
        </VBox>
    </left>
    <center>
        <VBox spacing="20.0" styleClass="dashboard-right-panel">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <VBox spacing="10.0">
                <Label styleClass="label app-title" text="Create Consultation">
                    <font>
                        <Font name="Segoe UI" size="24.0" />
                    </font>
                </Label>
            </VBox>
            
            <VBox spacing="15.0" styleClass="login-container" maxWidth="500.0">
                <padding>
                    <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
                </padding>
                
                <GridPane vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                    </columnConstraints>
                    
                    <Label text="Appointment ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="login-subtitle" />
                    <TextField fx:id="appointmentIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="Diagnosis:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="login-subtitle" />
                    <TextArea fx:id="diagnosisField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="3" />
                    
                    <Label text="Treatment Plan:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="login-subtitle" />
                    <TextArea fx:id="treatmentPlanField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="3" />
                    
                    <Label text="Prescription:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="login-subtitle" />
                    <TextArea fx:id="prescriptionField" GridPane.rowIndex="3" GridPane.columnIndex="1" prefRowCount="3" />
                    
                    <Label text="Follow-up Date:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="login-subtitle" />
                    <DatePicker fx:id="followUpDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                </GridPane>
                
                <HBox styleClass="hbox.action-bar">
                    <Button styleClass="button flat" text="Cancel" onAction="#handleCancelCreate" />
                    <Button styleClass="button" text="Confirm Consultation" onAction="#handleConfirmCreate" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>