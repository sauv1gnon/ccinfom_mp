<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ccinfoms17grp2.ui.DoctorBranchAssignmentController"
      spacing="15.0" prefWidth="700.0" prefHeight="500.0">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label text="Branch Assignment" styleClass="form-title">
        <font>
            <Font name="Segoe UI Semibold" size="18.0" />
        </font>
    </Label>
    
    <Label fx:id="doctorNameLabel" text="Doctor Name">
        <font>
            <Font name="Segoe UI" size="14.0" />
        </font>
    </Label>
    
    <Separator/>
    
    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <Label text="Available Branches">
                <font>
                    <Font name="Segoe UI Semibold" size="13.0" />
                </font>
            </Label>
            <ListView fx:id="availableBranchesListView" VBox.vgrow="ALWAYS"/>
        </VBox>
        
        <VBox spacing="10.0" alignment="CENTER">
            <Button fx:id="assignButton" text="→ Assign" onAction="#handleAssign"
                    styleClass="button-primary" prefWidth="100.0"/>
            <Button fx:id="unassignButton" text="← Remove" onAction="#handleUnassign"
                    styleClass="button-secondary" prefWidth="100.0"/>
        </VBox>
        
        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <Label text="Assigned Branches">
                <font>
                    <Font name="Segoe UI Semibold" size="13.0" />
                </font>
            </Label>
            <ListView fx:id="assignedBranchesListView" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
    
    <Separator/>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" 
                styleClass="button-primary" prefWidth="100.0"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                styleClass="button-secondary" prefWidth="100.0"/>
    </HBox>
</VBox>
