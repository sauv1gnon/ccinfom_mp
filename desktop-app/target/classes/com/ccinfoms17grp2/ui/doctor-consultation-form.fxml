<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@app.css"
            prefHeight="700.0" prefWidth="800.0">
    
    <!-- Header -->
    <top>
        <VBox styleClass="header" spacing="10">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <Label fx:id="titleLabel" text="Create Consultation" styleClass="title">
                <font><Font size="24" /></font>
            </Label>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="20">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                
                <!-- Appointment Selection -->
                <VBox spacing="10">
                    <Label text="Appointment *" styleClass="form-label">
                        <font><Font size="14" /></font>
                    </Label>
                    <ComboBox fx:id="appointmentComboBox" prefWidth="400"/>
                    <Label fx:id="patientInfoLabel" text="" styleClass="subtitle"/>
                </VBox>
                
                <Separator/>
                
                <!-- Consultation Times -->
                <HBox spacing="20">
                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="Start Date & Time" styleClass="form-label"/>
                        <HBox spacing="10">
                            <DatePicker fx:id="startDatePicker" prefWidth="150"/>
                            <TextField fx:id="startTimeField" promptText="HH:mm (e.g., 14:30)" prefWidth="150"/>
                        </HBox>
                    </VBox>
                    
                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="End Date & Time" styleClass="form-label"/>
                        <HBox spacing="10">
                            <DatePicker fx:id="endDatePicker" prefWidth="150"/>
                            <TextField fx:id="endTimeField" promptText="HH:mm (e.g., 15:30)" prefWidth="150"/>
                        </HBox>
                    </VBox>
                </HBox>
                
                <!-- Diagnosis -->
                <VBox spacing="10">
                    <Label text="Diagnosis *" styleClass="form-label">
                        <font><Font size="14" /></font>
                    </Label>
                    <TextArea fx:id="diagnosisTextArea" promptText="Enter diagnosis..." 
                              wrapText="true" prefRowCount="3"/>
                </VBox>
                
                <!-- Treatment Plan -->
                <VBox spacing="10">
                    <Label text="Treatment Plan" styleClass="form-label">
                        <font><Font size="14" /></font>
                    </Label>
                    <TextArea fx:id="treatmentPlanTextArea" promptText="Enter treatment plan..." 
                              wrapText="true" prefRowCount="3"/>
                </VBox>
                
                <!-- Prescription -->
                <VBox spacing="10">
                    <Label text="Prescription" styleClass="form-label">
                        <font><Font size="14" /></font>
                    </Label>
                    <TextArea fx:id="prescriptionTextArea" promptText="Enter prescription..." 
                              wrapText="true" prefRowCount="3"/>
                </VBox>
                
                <!-- Follow-up Date -->
                <VBox spacing="10">
                    <Label text="Follow-up Date & Time" styleClass="form-label"/>
                    <HBox spacing="10">
                        <DatePicker fx:id="followUpDatePicker" prefWidth="150"/>
                        <TextField fx:id="followUpTimeField" promptText="HH:mm (e.g., 10:00)" prefWidth="150"/>
                    </HBox>
                </VBox>
                
                <!-- Action Buttons -->
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <padding><Insets top="20"/></padding>
                    <Button fx:id="saveButton" text="Save Consultation" onAction="#handleSave" 
                            styleClass="btn-primary" prefWidth="150" prefHeight="35"/>
                    <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" 
                            styleClass="btn-secondary" prefWidth="100" prefHeight="35"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
