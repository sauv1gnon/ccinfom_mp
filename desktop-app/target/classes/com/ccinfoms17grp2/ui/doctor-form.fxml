<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ccinfoms17grp2.ui.DoctorFormController"
      spacing="15.0" prefWidth="550.0" prefHeight="550.0">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label fx:id="titleLabel" text="Doctor Form" styleClass="form-title">
        <font>
            <Font name="Segoe UI Semibold" size="18.0" />
        </font>
    </Label>
    
    <Separator/>
    
    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints minWidth="120.0" prefWidth="120.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   promptText="Enter last name"/>
        
        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   promptText="Enter first name"/>
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   promptText="Enter email address"/>
        
        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"
                  maxWidth="Infinity" promptText="Select availability status"/>
    </GridPane>
    
    <Label text="Specializations (select one or more):">
        <font>
            <Font name="Segoe UI Semibold" size="13.0" />
        </font>
    </Label>
    
    <ListView fx:id="specializationListView" VBox.vgrow="ALWAYS" prefHeight="200.0"/>
    
    <Separator/>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" 
                styleClass="button-primary" prefWidth="100.0"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                styleClass="button-secondary" prefWidth="100.0"/>
    </HBox>
</VBox>
