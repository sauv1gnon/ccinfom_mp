<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20"
      prefWidth="500" prefHeight="400">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label fx:id="titleLabel" text="Create Queue Entry" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="Patient:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="patientComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"/>
        
        <Label text="Branch:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="branchComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"/>
        
        <Label text="Queue Number:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="queueNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Auto-assigned"/>
        
        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200"/>
    </GridPane>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-min-width: 80px;"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" style="-fx-min-width: 80px;"/>
    </HBox>
    
</VBox>
