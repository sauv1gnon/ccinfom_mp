<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="900" prefHeight="600">
    
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Queue Management" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Branch:"/>
                <ComboBox fx:id="branchFilterComboBox" prefWidth="200"/>
                <Label text="Status:"/>
                <ComboBox fx:id="statusFilterComboBox" prefWidth="150"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="createButton" text="Create" onAction="#handleCreate" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="queueTable">
            <columns>
                <TableColumn fx:id="queueIdColumn" text="Queue ID" prefWidth="80"/>
                <TableColumn fx:id="queueNumberColumn" text="Queue #" prefWidth="80"/>
                <TableColumn fx:id="patientIdColumn" text="Patient ID" prefWidth="100"/>
                <TableColumn fx:id="branchIdColumn" text="Branch ID" prefWidth="100"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="180"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="editButton" text="Edit" onAction="#handleEdit"/>
            <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"/>
        </HBox>
    </bottom>
    
</BorderPane>