<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ccinfoms17grp2.ui.UserFormController"
      spacing="15.0" prefWidth="500.0" prefHeight="450.0">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label fx:id="titleLabel" text="User Form" styleClass="form-title">
        <font>
            <Font name="Segoe UI Semibold" size="18.0" />
        </font>
    </Label>
    
    <Separator/>
    
    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints minWidth="120.0" prefWidth="120.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   promptText="Enter email address"/>
        
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       promptText="Enter password"/>
        
        <Label text="User Type:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="userTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"
                  maxWidth="Infinity" promptText="Select user type"/>
        
        <Label text="Person ID:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="personIdField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   promptText="Patient ID or Doctor ID"/>
        
        <Label text="Active:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <CheckBox fx:id="isActiveCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="4"
                  text="User account is active"/>
    </GridPane>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <Separator/>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" 
                styleClass="button-primary" prefWidth="100.0"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                styleClass="button-secondary" prefWidth="100.0"/>
    </HBox>
</VBox>
